<Window x:Class="TusindfrydWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TusindfrydWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Grid>
        <Label Content="Blomstersorter:" HorizontalAlignment="Left" Margin="44,14,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="BlomstersortTB" HorizontalAlignment="Center" Margin="0,40,0,0" Text="Ingen blomster er tilføjet" TextWrapping="Wrap" VerticalAlignment="Top" Background="LightGray" Height="159" Width="240"/>
        <Button x:Name="Create" HorizontalAlignment="Left" Margin="29,200,0,0" VerticalAlignment="Top" Click="Create_Click" Width="60" Height="34" >
            <TextBlock Text="Opret Blomstersort" FontSize="9" TextWrapping="Wrap" TextAlignment="Center" Width="60"/>
        </Button>

        <Button x:Name="Delete" HorizontalAlignment="Left" Margin="210,200,0,0" VerticalAlignment="Top" Click="Delete_Click" Width="60" Height="34" >
            <TextBlock Text="Slet Blomstersort" FontSize="9" TextWrapping="Wrap" TextAlignment="Center" Width="60"/>
        </Button>
    </Grid>
</Window>
